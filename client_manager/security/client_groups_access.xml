<odoo>
    <!-- Assign permissions for Sales Manager group -->
    <record id="access_opportunity_manager_sales_manager" model="ir.model.access">
        <field name="name">Opportunity Manager Access for Sales Manager</field>
        <field name="model_id" ref="model_client_opportunity"/>
        <field name="group_id" ref="group_sales_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
