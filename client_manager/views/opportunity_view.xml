<odoo>
  
    <record id="view_opportunity_form" model="ir.ui.view">
        <field name="name">client.opportunity.form</field>
        <field name="model">client.opportunity</field>
        <field name="arch" type="xml">
            <form string="Sales Opportunity">
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="opportunity_name"/>
                        <field name="expected_value"/>
                        <field name="stage"/>
                        <field name="follow_up_date"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_opportunity_tree" model="ir.ui.view">
        <field name="name">client.opportunity.tree</field>
        <field name="model">client.opportunity</field>
        <field name="arch" type="xml">
            <tree string="Opportunities">
                <field name="client_id"/>
                <field name="opportunity_name"/>
                <field name="expected_value"/>
                <field name="stage"/>
                <field name="follow_up_date"/>
            </tree>
        </field>
    </record>
   
</odoo>
