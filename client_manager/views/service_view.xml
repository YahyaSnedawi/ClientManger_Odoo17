<!-- views/service_view.xml -->

<odoo>
    <!-- Form View for Service -->
    <record id="view_service_form" model="ir.ui.view">
        <field name="name">client.service.form</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <form string="Service/Product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="description"/>
                        <field name="client_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Service -->
    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">client.service.tree</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <tree string="Services">
                <field name="name"/>
                <field name="price"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="action_service_tree" model="ir.actions.act_window">
    <field name="name">Services</field>
    <field name="res_model">client.service</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_services" name="Services"
          parent="client_manager_root"
          action="action_service_tree"
          sequence="3"/>
</odoo>
